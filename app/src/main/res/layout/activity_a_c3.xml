<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AC3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/logo_f" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_fname"
                android:layout_width="317dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="Welcome User" />

            <Button
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="logout" />

        </LinearLayout>

        <TextView
            android:id="@+id/curr_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Currency From" />

        <Spinner
            android:id="@+id/drop_down1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/curr_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Currency To" />

        <Spinner
            android:id="@+id/drop_down2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/show_banks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Banks" />

        <Button
            android:id="@+id/cust_supt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Support" />

        <TextView
            android:id="@+id/check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>